@page

<link rel="stylesheet" href="~/css/chat.css" />
<link rel="stylesheet" href="~/css/style.css" type="text/css">

<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-md-6">&nbsp;</div>
        <div class="col-md-6">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1">Name</span>
                </div>
                <input id="userInput" type="text" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
            </div>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Message</span>
                </div>
                <textarea id="messageInput" class="form-control" aria-label="With textarea"></textarea>
            </div>
            <div class="input-group">
                <button id="sendButton" type="button" class="btn btn-primary btn-lg btn-block">Send Message</button>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <canvas id="canvas" width="500" height="400"></canvas>
        </div>
        <div class="col-6">
            <ul id="chatHistory"></ul>
        </div>
    </div>
</div>

<script src="~/lib/signalr/dist/browser/signalr.js"></script>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js" integrity="sha256-CutOzxCRucUsn6C6TcEYsauvvYilEniTXldPa6/wu0k=" crossorigin="anonymous"></script>
    <script src="~/js/chat.js"></script>
    @*<script src="~/js/app.js" type="text/javascript" charset="utf-8"></script>*@
}