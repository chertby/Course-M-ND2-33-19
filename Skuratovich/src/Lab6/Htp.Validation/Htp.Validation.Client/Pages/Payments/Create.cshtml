@page
@model CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Checkout form</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <h4 class="mb-3">Billing Address</h4>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="CreatePaymentRequest.FirstName" class="control-label"></label>
                    <input asp-for="CreatePaymentRequest.FirstName" class="form-control" placeholder="First name" />
                    <span asp-validation-for="CreatePaymentRequest.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="CreatePaymentRequest.MiddleName" class="control-label"></label>
                    <input asp-for="CreatePaymentRequest.MiddleName" class="form-control" placeholder="Middle name" />
                    <span asp-validation-for="CreatePaymentRequest.MiddleName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="CreatePaymentRequest.LastName" class="control-label"></label>
                    <input asp-for="CreatePaymentRequest.LastName" class="form-control" placeholder="Last name" />
                    <span asp-validation-for="CreatePaymentRequest.LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CreatePaymentRequest.Address" class="control-label"></label>
                <input asp-for="CreatePaymentRequest.Address" class="form-control" placeholder="Address" />
                <span asp-validation-for="CreatePaymentRequest.Address" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="CreatePaymentRequest.City" class="control-label"></label>
                    <input asp-for="CreatePaymentRequest.City" class="form-control" placeholder="City" />
                    <span asp-validation-for="CreatePaymentRequest.City" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <div class="form-group">
                        <label asp-for="CreatePaymentRequest.Country" class="control-label"></label>
                        <input asp-for="CreatePaymentRequest.Country" class="form-control" placeholder="Country" />
                        <span asp-validation-for="CreatePaymentRequest.Country" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="CreatePaymentRequest.PostCode" class="control-label"></label>
                    <input asp-for="CreatePaymentRequest.PostCode" class="form-control" placeholder="Post code" />
                    <span asp-validation-for="CreatePaymentRequest.PostCode" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CreatePaymentRequest.Email" class="control-label"></label>
                <input asp-for="CreatePaymentRequest.Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="CreatePaymentRequest.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatePaymentRequest.Amount" class="control-label"></label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    <input asp-for="CreatePaymentRequest.Amount" class="form-control" placeholder="0.01" />
                </div>
                <span asp-validation-for="CreatePaymentRequest.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatePaymentRequest.Description" class="control-label">
                    Description
                    <span class="text-muted">(Optional)</span>
                </label>
                <textarea asp-for="CreatePaymentRequest.Description" class="form-control" placeholder="Description" ></textarea>
                <span asp-validation-for="CreatePaymentRequest.Description" class="text-danger"></span>
            </div>
            <hr class="mb-4">
            <h4 class="mb-3">Payment</h4>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="CreatePaymentRequest.CreditCardNumber" class="control-label"></label>
                    <input asp-for="CreatePaymentRequest.CreditCardNumber" class="form-control" />
                    <span asp-validation-for="CreatePaymentRequest.CreditCardNumber" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">
                    <div class="form-group">
                        <label asp-for="CreatePaymentRequest.ExpirationMonth" class="control-label"></label>
                        <input asp-for="CreatePaymentRequest.ExpirationMonth" class="form-control" />
                        <span asp-validation-for="CreatePaymentRequest.ExpirationMonth" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group col-md-2">
                    <div class="form-group">
                        <label asp-for="CreatePaymentRequest.ExpirationYear" class="control-label"></label>
                        <input asp-for="CreatePaymentRequest.ExpirationYear" class="form-control" />
                        <span asp-validation-for="CreatePaymentRequest.ExpirationYear" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="CreatePaymentRequest.SecurityCode" class="control-label"></label>
                    <input asp-for="CreatePaymentRequest.SecurityCode" class="form-control" />
                    <span asp-validation-for="CreatePaymentRequest.SecurityCode" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <hr class="mb-4">
                <button class="btn btn-primary btn-lg btn-block" type="submit">Continue to checkout</button> 
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

