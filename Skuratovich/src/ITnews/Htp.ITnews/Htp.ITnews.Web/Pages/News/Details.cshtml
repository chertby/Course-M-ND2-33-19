@page
@using System.Globalization
@model DetailsModel
@{
    ViewData["Title"] = Model.NewsViewModel.Title;
}

<div>
    <div>
        <a>@Model.NewsViewModel.CategoryTitle</a>
    </div>
    <div class="page-header">
        <h1>@Model.NewsViewModel.Title</h1>
    </div>
    <div>
        <div>
            <a><span>@Model.NewsViewModel.AuthorUserName</span></a>
            <span>@Model.NewsViewModel.Created</span>
        </div>
    </div>
    <hr />
    <div>
        <div>
            <strong>@Model.NewsViewModel.Description</strong>
        </div>
        <div class="form-group">
            <textarea readonly asp-for="NewsViewModel.Content" class="form-control"></textarea>
        </div>
    </div>
    <div>
        <p>@Html.DisplayNameFor(model => model.NewsViewModel.Tags)</p>
        <ul>
            @foreach (var item in Model.NewsViewModel.Tags)
            {
                <li><a>item.Label</a></li>
            }
        </ul>


        @Html.DisplayFor(model => model.NewsViewModel.Tags)
</div>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.NewsViewModel.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        @*await Html.RenderPartialAsync("_TagEditorScriptsPartial");*@
        @*await Html.RenderPartialAsync("_MdScriptsPartial");*@

        @*easymde*@
        <link href="~/lib/easymde/css/easymde.min.css" rel="stylesheet" />
        <script src="~/lib/easymde/js/easymde.min.js"></script>
        <script src="https://cdn.jsdelivr.net/highlight.js/latest/highlight.min.js"></script>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/highlight.js/latest/styles/github.min.css">

        <script>var easyMDE = new EasyMDE({
                element: $('#NewsViewModel_Content')[0],
                renderingConfig: {
                    singleLineBreaks: false,
                    codeSyntaxHighlighting: true,
                },
                status: false,
                toolbar: false,
                toolbarTips: false,
            });
            easyMDE.togglePreview();</script>
    }
}
