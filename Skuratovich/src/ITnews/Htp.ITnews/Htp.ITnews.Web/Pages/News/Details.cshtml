@page
@using System.Globalization
@model DetailsModel
@{
    ViewData["Title"] = Model.NewsViewModel.Title;
}

<link rel="stylesheet" href="~/css/comment.css" />

<div>
    <input type="hidden" asp-for="NewsViewModel.Id" />
    <div>
        <a class="btn btn-link" role="button" >@Model.NewsViewModel.CategoryTitle</a>
        </div>
        <div class="page-header">
        <h1>@Model.NewsViewModel.Title</h1>
        </div>
        <div>
        <div>
        <a><span>@Model.NewsViewModel.AuthorUserName</span></a>
        <span>@Model.NewsViewModel.Created</span>
        </div>
        </div>
        <hr />
        <div>
        <div>
        <strong>@Model.NewsViewModel.Description</strong>
        </div>
        <div class="form-group">
        <textarea readonly asp-for="NewsViewModel.Content" class="form-control"></textarea>
        </div>
        </div>
        <div>
        <ul class="nav nav-pills">
        @foreach (var item in Model.NewsViewModel.Tags)
        {
            <li class="nav-item">
            <a class="nav-link btn btn-light" role="button" >@item.Label</a>
            </li>
        }
        </ul>
        </div>
        </div>
        <div>
        <a asp-page="./Edit" asp-route-id="@Model.NewsViewModel.Id">Edit</a> |
        <a asp-page="./Index">Back to List</a>
        </div>
        <div class="container">
        <div class="input-group">
        <div class="input-group-prepend">
        <span class="input-group-text">Message</span>
        </div>
        <textarea id="messageInput" class="form-control" aria-label="With textarea"></textarea>
        </div>
        <div class="input-group">
        <button id="sendButton" type="button" class="btn btn-primary btn-lg btn-block">Send Message</button>
        </div>
        <div id="comments">
        <header>
        <h2>Comments <span>X</span></h2>
        </header>

        <ul class="content-list content-list_comments" id="commentsList"></ul>
        </div>
        </div>

        <script src="~/lib/signalr/dist/browser/signalr.js"></script>

        @section Scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
                @*await Html.RenderPartialAsync("_TagEditorScriptsPartial");*@
                @*await Html.RenderPartialAsync("_MdScriptsPartial");*@

                @*easymde*@
                <link href="~/lib/easymde/css/easymde.min.css" rel="stylesheet" />
                <script src="~/lib/easymde/js/easymde.min.js"></script>
                <script src="https://cdn.jsdelivr.net/highlight.js/latest/highlight.min.js"></script>
                <link rel="stylesheet" href="https://cdn.jsdelivr.net/highlight.js/latest/styles/github.min.css">

                <script>    var easyMDE = new EasyMDE({
                    element: $('#NewsViewModel_Content')[0],
                    renderingConfig: {
                        singleLineBreaks: false,
                        codeSyntaxHighlighting: true,
                    },
                    status: false,
                    toolbar: false,
                    toolbarTips: false,
                });
                easyMDE.togglePreview();</script>

                <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js" integrity="sha256-CutOzxCRucUsn6C6TcEYsauvvYilEniTXldPa6/wu0k=" crossorigin="anonymous"></script>
                <script src="~/js/chat.js"></script>

            }
        }
