@page
@using System.Globalization
@model DeleteModel
@{
    ViewData["Title"] = Localizer["Delete news"];
}

<h1>@Localizer["Delete"]</h1>

<h3>@Localizer["Are you sure you want to delete this?"]</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NewsViewModel.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NewsViewModel.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NewsViewModel.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NewsViewModel.Description)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="NewsViewModel.Id" />
        <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" /> |
        <a asp-page="./Index">@Localizer["Back to List"]</a>
    </form>
</div>